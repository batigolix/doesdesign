{#
/**
 * @file
 * Theme override to display a node.
 *
 * Available variables:
 * - node: The node entity.
 * - label: The title of the node.
 * - content: All node items.
 * - author_picture: The node author's profile picture.
 * - date: Themed creation date field.
 * - author_name: Themed author name field.
 * - url: Direct URL of the current node.
 * - display_submitted: Whether submission information should be displayed.
 * - attributes: HTML attributes for the containing element.
 * - title_attributes: Attributes for the title.
 * - title_prefix: Additional output populated by modules.
 * - title_suffix: Additional output populated by modules.
 * - view_mode: View mode; for example, "teaser" or "full".
 *
 * @see template_preprocess_node()
 */
#}
{%
  set classes = [
    'node',
    'node--type-' ~ node.bundle|clean_class,
    node.isPromoted() ? 'node--promoted',
    node.isSticky() ? 'node--sticky',
    not node.isPublished() ? 'node--unpublished',
    view_mode ? 'node--view-mode-' ~ view_mode|clean_class,
  ]
%}
<div id="node-{{ node.id() }}"{{ attributes.addClass(classes) }}>

  {% if not view_mode == 'full' %}
    <h2{{ title_attributes }}>
      <a href="{{ url }}">{{ label }}</a>
    </h2>
  {% endif %}

  {{ author_picture }}

  {% if display_submitted %}
    <span class="submitted">{{ date }} â€” {{ author_name }}</span>
  {% endif %}

  <div class="content">
    {{ content|without('comments', 'links') }}
  </div>

</div>

{{ content.comments }}
