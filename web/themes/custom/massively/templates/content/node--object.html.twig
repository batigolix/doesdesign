<section {{ attributes.addClass('post') }}>
  {{ title_prefix }}
  {% if not page %}
    <h2{{ title_attributes }}>
      <a href="{{ url }}" rel="bookmark">{{ label }}</a>
    </h2>
  {% endif %}
  {{ title_suffix }}
  {% if page %}
    <header class="major">
      <span class="date"><span>{{ content.field_type }}</span></span>
{#      <ul>#}
{#        {% for key, item in content.field_type if key|first != '#' %}#}
{#          <li class="item-{{ key + 1 }}">{{ item }}</li>#}
{#        {% endfor %}#}
{#      </ul>#}
      <h1>{{ label }}</h1>
      <p>{{ node.body.summary }}</p>
    </header>
  {% endif %}
  <div class="image main">{{ content.field_image }}</div>
  <div{{ content_attributes }}>
    {{ content|without('field_image', 'field_type') }}
    Laatst bijgewerkt op {{ date }}
  </div>
</section>
